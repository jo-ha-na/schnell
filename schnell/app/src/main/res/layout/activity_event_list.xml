<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventListActivity"
    android:background="@drawable/bg_read_more">

    <Button
        android:id="@+id/btnAddEvent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="92dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#861F616A"
        android:text="Ajouter un événement" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllEvents"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_below="@id/btnAddEvent1"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="599dp"
        android:text=" Vos événements" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="152dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#861F616A"
        android:text="Acuueil" />






</RelativeLayout>
